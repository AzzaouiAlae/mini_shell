{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "*.c",
                "*/*.c",
                "alae/*/*.c",
                "alae/*/*/*.c",
                "${workspaceFolder}/oussama/check_syntax_error/*.c",
                "-lreadline",
                "-o",
                "${workspaceFolder}/mini_shell"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}